{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami": "ami-0d782d2e2f63212ec",
      "instance_type": "t2.micro",
      "ssh_username": "admin",
      "ami_name": "dvwa-{{timestamp}}",
      "launch_block_device_mappings": [
        {
          "device_name": "xvda",
          "volume_size": 8,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update  && sudo apt-get -y install python3 python3-pip git",
        "pip3 install ansible",
        "mkdir -p ${HOME}/.ansible/roles",
        "git clone https://github.com/HackThisCompany/DVWA-ansible.git ${HOME}/.ansible/roles/DVWA-ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "{{ template_dir }}/../ansible/dvwa-install-playbook.yml"
    }
  ]
}
